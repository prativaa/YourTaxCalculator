

<%= turbo_stream.replace "tax_form" do %>
  <div id='tax_form'>
		<p> Monthly Income: <%= @monthly_income %> </p>
		<p> Annual Income: <%= @annual_income%></p>
		<p> SSF amount: <%= @ssf_amt%></p>
